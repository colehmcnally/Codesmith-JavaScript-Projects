function union(Arrays) {
    // use reduce to iterate through each array in the arrays parameter (return evaluated result) - we are creating a function inside of the reduce method as our first argument as a higher-order function
    // initialize an empty outputArray to be our output (accumulator)
    return Arrays.reduce((outputArray, currentArray) => {
        // iterate through each inner array
        currentArray.forEach(element => {
            // if the current element is not already in the output array, push it to the output array
            if (!outputArray.includes(element)) {
                outputArray.push(element);
            }
        })
        // return the output array to be used as the accumulator for the next iteration
        return outputArray;
    }, [])
}

// Uncomment these to check your work!
const arr1 = [5, 10, 15];
const arr2 = [15, 88, 1, 5, 7];
const arr3 = [100, 15, 10, 1, 5];
console.log(union([arr1, arr2, arr3])); // should log: [5, 10, 15, 88, 1, 7, 100]